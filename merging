#include<stdio.h>
void main()
{
    int n1,n2,n3,i,c1=0,c2=0;
    int a[100],b[100],c[200];
    printf("enter size of 1st array\n");
    scanf("%d",&n1);
    printf("enter size of 2nd array\n");
    scanf("%d",&n2);
    printf("enter 1st sorted array\n");
    for(i=0;i<n1;i++)
        scanf("%d",&a[i]);
    printf("enter 2nd sorted array\n");
    for(i=0;i<n2;i++)
        scanf("%d",&b[i]);
    n3=n1+n2;
    for(i=0;i<n3;i++)
    {
        if(a[c1]<=b[c2])
            c[i]=a[c1++];
        else
            c[i]=b[c2++];
    }
    printf("merged array");
    for(i=0;i<n3;i++)
        printf("%d\t",c[i]);
}
